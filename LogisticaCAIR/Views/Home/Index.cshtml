@{
    ViewData["Title"] = "Login";
}
@model LoginViewModel
@*Accede al modelo*@

<div class="text-center embed-responsive">
    @*<h1 class="display-4">Welcome</h1>
        <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>*@
    @*<img src="~/img/logo_cair.png" class="img-responsive" />*@
    <center>
        <div class="card">
            <div class="row">
                <div class="col-md-12">
                    <section>
                        <form asp-controller="Home" asp-action="Index" method="post">
                            <h4>Iniciar Sesión</h4>
                            <br />
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group text-left">
                                <label> Usuario</label>
                                <input asp-for="Input.UserName" class="form-control" name="UserName" placeholder="Usuario" />
                                <span asp-validation-for="Input.UserName" class="text-danger"></span>
                                @Html.ValidationMessageFor(x => x.Input.UserName, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group text-left">
                                @*<label asp-for="Input.Pass"></label>
                                    <input asp-for="Input.Pass" class="form-control" />*@
                                @*<span class="input-group-btn">
                                        <button id="verPassword" class="btn btn-default" type="button">
                                            <i class="glyphicon glyphicon-eye-open"></i>
                                        </button>
                                    </span>*@
                                <label>Contraseña</label>
                                <div class="input-group">
                                    @*@Html.PasswordFor(x => x.Input.Pass, new { @class = "form-control" })*@
                                    <input asp-for="Input.Pass" class="form-control" name="Pass" placeholder="Contraseña" />
                                    <span asp-validation-for="Input.Pass" class="text-danger"></span>
                                    @*<img src="https://img.icons8.com/ios-filled/50/000000/keyhole-shield.png" />*@
                                </div>
                                @Html.ValidationMessageFor(x => x.Input.Pass, null, new { @class = "text-danger" })
                            </div>
                            <div class="form-group">
                                <button type="submit" class="btn btn-info" asp-controller="Home" asp-action="Index">
                                    Ingresar
                                </button>
                            </div>
                        </form>
                    </section>
                </div>
            </div>
        </div>
    </center>
</div>
